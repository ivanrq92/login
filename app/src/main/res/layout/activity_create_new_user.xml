<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.login.CreateNewUserActivity">

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:id="@+id/et_useremail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_style"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvText"
        />
    <TextView
        android:id="@+id/e1"
        android:text="*"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/et_useremail"
        android:layout_alignTop="@id/et_useremail"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/et_username"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Username"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_style"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_useremail"
        />
    <TextView
        android:id="@+id/e2"
        android:text="*"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/et_username"
        android:layout_alignTop="@id/et_username"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_style"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_username"
        android:password="true"
        />
    <TextView
        android:id="@+id/e3"
        android:text="*"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/et_password"
        android:layout_alignTop="@id/et_password"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/et_password2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Repeat Password"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_style"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_password"
        android:password="true"
        />
    <TextView
        android:id="@+id/e4"
        android:text="*"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/et_password2"
        android:layout_alignTop="@id/et_password2"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/msg"
        android:text="* The passwords are different."
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password2"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up!"
        android:textAllCaps="false"
        android:background="@drawable/btn_style"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_password2"
        android:layout_marginTop="20sp"
        />
</RelativeLayout>
