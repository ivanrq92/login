<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.login.LoginActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginTop="50dp"
        android:text="Login!"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/et_useremail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:gravity="center"
        android:typeface="sans"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_style"
        android:textStyle="italic"
        android:layout_below="@+id/text"
        android:layout_alignLeft="@id/et_password"
        android:layout_alignStart="@id/et_password" />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_below="@id/et_useremail"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:layout_marginTop="20dp"
        android:password="true"
        android:background="@drawable/et_style"
        />
    <CheckBox
        android:id="@+id/checkboxRememberUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_centerHorizontal="true"
        android:text="Remember me!"
        android:layout_marginTop="20sp"
        />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkboxRememberUser"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_style"
        android:textStyle="bold|italic"
        />
    <TextView
        android:id="@+id/linkSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you aren't registered, sign up here"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
